<UserControl x:Class="LoginForm.CustomControlles.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginForm.CustomControlles"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                             FontWeight="Medium"
                             FontSize="23"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="GhostWhite"
                             BorderThickness="0,0,0,2"
                             VerticalAlignment="Center"
                             Padding="30,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="https://cdn-icons-png.flaticon.com/512/6195/6195699.png" Stretch="Uniform"  AlignmentX="Left" >
            </ImageBrush>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
